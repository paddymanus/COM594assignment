<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1856ba"
    tools:context=".signUp"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editText_ca_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txt_ca_username"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_ca_pword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/txt_ca_password"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintStart_toStartOf="@+id/editText_ca_uname"
        app:layout_constraintTop_toBottomOf="@+id/editText_ca_uname" />

    <EditText
        android:id="@+id/editText_ca_cpword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/txt_ca_cpassword"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintStart_toStartOf="@+id/editText_ca_pword"
        app:layout_constraintTop_toBottomOf="@+id/editText_ca_pword" />

    <EditText
        android:id="@+id/editText_ca_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/txt_ca_email"
        android:textColor="#fff"
        android:textColorHint="#fff"
        app:layout_constraintStart_toStartOf="@+id/editText_ca_cpword"
        app:layout_constraintTop_toBottomOf="@+id/editText_ca_cpword" />


    <Button
        android:id="@+id/button_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:onClick="signUp_OK"
        android:text="@string/btn_ca"
        app:layout_constraintStart_toStartOf="@+id/textView_ca"
        app:layout_constraintTop_toBottomOf="@+id/editText_ca_email" />


    <TextView
        android:id="@+id/textView_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:onClick="alreadySignedUp"
        android:text="@string/txtView_ca_alreadyRegistered"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ca" />

</android.support.constraint.ConstraintLayout>